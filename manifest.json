{
  "manifest_version": 2,
  "background": {
    "persistent": true,
    "scripts": [
      "node_modules/extension-include/extension-include.js",
      "node_modules/analytics.js/analytics.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [ "specific/sub_frame.js" ],
      "matches": [ "<all_urls>" ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "js": [ "specific/youtube.js" ],
      "matches": [ "*://*.youtube.com/*" ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "js": [
        "node_modules/extension-include/extension-include.js",
        "node_modules/analytics.js/analytics.js",
        "content_scripts_main/0-definitions.js",
        "content_scripts_main/1-setSidebarWidth.js",
        "content_scripts_main/2-initIframe.js",
        "content_scripts_main/3-setIframeWidth.js",
        "content_scripts_main/4-setIframeUrl.js",
        "content_scripts_main/5-setupClickInterceptor.js",
        "content_scripts_main/6-document-ready.js"
      ],
      "matches": [ "<all_urls>" ],
      "all_frames": false,
      "run_at": "document_start"
    }
  ],
  "description": "Your favorite site in a sidebar, your favorite sites content on center stage." ,
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png",
    "16": "images/icon16.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Activate LinkBrowser on this page"
  },
  "incognito": "spanning",
  "minimum_chrome_version": "20",
  "name": "FeedBrowser (v0.1 alpha pup)",
  "version": "0.1",
  "permissions": [
    "<all_urls>",

    "activeTab",
    "browsingData",
    "chrome://favicon/",
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "idle",
    "notifications",
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking"
  ]
}